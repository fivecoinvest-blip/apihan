<?php
require_once 'session_config.php';
require_once 'config.php';
require_once 'db_helper.php';
require_once 'redis_helper.php';
require_once 'currency_helper.php';
require_once 'settings_helper.php';

// Load site settings
$siteSettings = SiteSettings::load();
$casinoName = $siteSettings['casino_name'] ?? 'Casino PHP';
$casinoTagline = $siteSettings['casino_tagline'] ?? 'Play & Win Big!';
$themeColor = $siteSettings['theme_color'] ?? '#6366f1';

$loggedIn = isset($_SESSION['user_id']);
$balance = 0;
$userCurrency = 'PHP';
$username = '';
$cache = RedisCache::getInstance();

if ($loggedIn) {
    $userModel = new User();
    $currentUser = $userModel->getById($_SESSION['user_id']);
    $balance = $userModel->getBalance($_SESSION['user_id']); // Already uses Redis cache
    $userCurrency = $currentUser['currency'] ?? 'PHP';
    $username = $currentUser['username'] ?? '';
    $_SESSION['currency'] = $userCurrency;
}

// Get games from database
$db = Database::getInstance();
$pdo = $db->getConnection();

// Handle AJAX request for loading more games or searching
if (isset($_GET['load_games'])) {
    $offset = isset($_GET['offset']) ? intval($_GET['offset']) : 0;
    $category = isset($_GET['category']) ? $_GET['category'] : 'all';
    $search = isset($_GET['search']) ? trim($_GET['search']) : '';
    $limit = 20;
    
    // If searching, load ALL matching games (no limit)
    if (!empty($search)) {
        $cacheKey = "games:search:" . md5($search . $category);
        $cachedGames = $cache->get($cacheKey);
        
        if ($cachedGames !== false) {
            header('Content-Type: application/json');
            echo json_encode($cachedGames);
            exit;
        }
        
        // Build search query
        $searchTerm = '%' . $search . '%';
        
        if ($category === 'all') {
            $stmt = $pdo->prepare("SELECT * FROM games WHERE is_active = 1 AND (name LIKE ? OR provider LIKE ?) ORDER BY sort_order ASC, name ASC");
            $stmt->execute([$searchTerm, $searchTerm]);
        } else {
            $stmt = $pdo->prepare("SELECT * FROM games WHERE is_active = 1 AND category = ? AND (name LIKE ? OR provider LIKE ?) ORDER BY sort_order ASC, name ASC");
            $stmt->execute([$category, $searchTerm, $searchTerm]);
        }
        
        $games = $stmt->fetchAll(PDO::FETCH_ASSOC);
        
        $result = array_map(function($g) {
            return [
                'id' => $g['game_uid'],
                'name' => $g['name'],
                'image' => $g['image'] && file_exists($g['image']) ? $g['image'] : null,
                'category' => $g['category'],
                'provider' => $g['provider']
            ];
        }, $games);
        
        // Cache search results for 5 minutes
        $cache->set($cacheKey, $result, 300);
        
        header('Content-Type: application/json');
        echo json_encode($result);
        exit;
    }
    
    // Regular pagination (no search) - RANDOMIZED
    $cacheKey = "games:list:{$category}:{$offset}:{$limit}:random_" . date('YmdH'); // Changes every hour
    $cachedGames = $cache->get($cacheKey);
    
    if ($cachedGames !== false) {
        header('Content-Type: application/json');
        echo json_encode($cachedGames);
        exit;
    }
    
    if ($category === 'all') {
        $stmt = $pdo->prepare("SELECT * FROM games WHERE is_active = 1 ORDER BY RAND() LIMIT ? OFFSET ?");
        $stmt->bindValue(1, $limit, PDO::PARAM_INT);
        $stmt->bindValue(2, $offset, PDO::PARAM_INT);
    } else {
        $stmt = $pdo->prepare("SELECT * FROM games WHERE is_active = 1 AND category = ? ORDER BY RAND() LIMIT ? OFFSET ?");
        $stmt->bindValue(1, $category, PDO::PARAM_STR);
        $stmt->bindValue(2, $limit, PDO::PARAM_INT);
        $stmt->bindValue(3, $offset, PDO::PARAM_INT);
    }
    $stmt->execute();
    $games = $stmt->fetchAll(PDO::FETCH_ASSOC);
    
    $result = array_map(function($g) {
        return [
            'id' => $g['game_uid'],
            'name' => $g['name'],
            'image' => $g['image'] && file_exists($g['image']) ? $g['image'] : null,
            'category' => $g['category'],
            'provider' => $g['provider']
        ];
    }, $games);
    
    // Cache for 1 hour with random seed
    $cache->set($cacheKey, $result, 3600);
    
    header('Content-Type: application/json');
    echo json_encode($result);
    exit;
}

// Initial load - first 20 games (with caching) - RANDOMIZED
$cacheKey = "games:initial:20:random_" . date('YmdH'); // Changes every hour
$gamesFromDb = $cache->remember($cacheKey, function() use ($pdo) {
    $stmt = $pdo->prepare("SELECT * FROM games WHERE is_active = 1 ORDER BY RAND() LIMIT 20");
    $stmt->execute();
    return $stmt->fetchAll(PDO::FETCH_ASSOC);
}, 3600); // 1 hour cache

// Get recent plays for logged-in users
$recentPlays = [];
if ($loggedIn) {
    $cacheKey = "user:{$_SESSION['user_id']}:recent_plays";
    $recentPlays = $cache->remember($cacheKey, function() use ($pdo) {
        $stmt = $pdo->prepare("
            SELECT gp.game_uid, gp.game_name, g.image, g.provider, g.category, MAX(gp.started_at) as last_played
            FROM game_plays gp
            LEFT JOIN games g ON gp.game_uid = g.game_uid
            WHERE gp.user_id = ? AND g.is_active = 1
            GROUP BY gp.game_uid, gp.game_name, g.image, g.provider, g.category
            ORDER BY last_played DESC
            LIMIT 10
        ");
        $stmt->execute([$_SESSION['user_id']]);
        return $stmt->fetchAll(PDO::FETCH_ASSOC);
    }, 300); // 5 minutes cache
}

// Get unique categories for navigation (with caching)
$cacheKey = "games:categories";
$categories = $cache->remember($cacheKey, function() use ($pdo) {
    $categoriesStmt = $pdo->query("SELECT DISTINCT category FROM games WHERE is_active = 1 ORDER BY category");
    return $categoriesStmt->fetchAll(PDO::FETCH_COLUMN);
}, RedisCache::CACHE_1_HOUR);

// Get total games count (with caching)
$cacheKey = "games:total_count";
$totalGamesCount = $cache->remember($cacheKey, function() use ($pdo) {
    return $pdo->query("SELECT COUNT(*) FROM games WHERE is_active = 1")->fetchColumn();
}, RedisCache::CACHE_1_HOUR);
